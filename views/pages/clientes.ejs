<!DOCTYPE html>
<html lang="es">
    <head> 
        <%- include('../partials/header.ejs'); %>
        <link rel="stylesheet" href="/static/css/vista_producto.css">
    </head>
    <body>
        
        <%- include('../partials/nav.ejs'); %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <section>
        
        <div class="sect">
            <center>
                <a style="margin-bottom: 25px; padding: 10px; border-radius: 5px; background-color: rgb(248, 136, 136); text-decoration: none; color: black;" href="/admin">Regresar</a>
        
                <h1>Listado de clientes</h1>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No.
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Apellido
                            </th>
                            <th>
                                Direccion
                            </th>
                            <th>
                                Telefono
                            </th>
                            <th>
                                Correo
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <%  clientes.forEach(function(clientes) { %> 
                            <tr>
                                <th><%= clientes.ID_CLIENTE %> </th>
                                <td><%= clientes.NOMBRE %> </td>
                                <td><%= clientes.APELLIDO %> </td>
                                <td><%= clientes.DIRECCION %> </td>
                                <td><%= clientes.TELEFONO %> </td>
                                <td><%= clientes.CORREO %> </td> 
                            </tr> 
                        <% }) %>     
                    </tbody>
                  </table>
            </center>
        </div>
    </section>
    <%- include('../partials/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </body>
</html>