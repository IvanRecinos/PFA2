    <script>
        function previsualizarImagen() {
            let input = document.getElementById('archivo');
            let imagenPrevia = document.getElementById('imagenPrevia');
            let file = input.files[0]; // Obtén el primer archivo seleccionado

            if (file) {
                let reader = new FileReader();
                console.log("hols");
                reader.onload = function(e) {
                imagenPrevia.src = e.target.result; // Establece la fuente de la imagen previa como los datos del archivo
                };

                reader.readAsDataURL(file);
            } else {
                imagenPrevia.src = ""; // Borra la imagen previa si no se selecciona un archivo
            }
        }
    </script>
